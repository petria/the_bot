<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.freakz</groupId>
    <artifactId>the_bot</artifactId>
    <packaging>pom</packaging>
<!--    <version>1.0-SNAPSHOT</version> -->
    <version>${revision}</version>
    <name>the_bot</name>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.1</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>
        <revision>1.1-SNAPSHOT</revision>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>12</maven.compiler.source>
        <maven.compiler.target>12</maven.compiler.target>
        <java.version>12</java.version>

        <commons-cli.version>1.5.0</commons-cli.version>
        <jsap.version>2.1</jsap.version>
        <jsoup.version>1.14.3</jsoup.version>
        <logback.version>1.2.6</logback.version>
        <org.kitteh.irc.version>8.0.0</org.kitteh.irc.version>
        <org.reflections.version>0.10.2</org.reflections.version>
        <org.javacord.version>3.6.0</org.javacord.version>

    </properties>

    <modules>
        <module>springboot_ui_backend</module>
        <module>the_bot_common</module>
        <module>the_bot_io</module>
        <module>the_bot_engine</module>
    </modules>

</project>
